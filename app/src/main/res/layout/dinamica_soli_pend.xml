<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rel_sol_pend"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="end"
    android:background="@android:color/white"
    android:clickable="true">

    <Button
        android:id="@+id/solpen_btn_reject"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:foregroundGravity="right"
        android:gravity="center"
        android:text="@string/reject"
        android:textColor="@android:color/background_light"
        android:textSize="12sp"
        tools:background="@android:color/holo_red_dark" />

    <Button
        android:id="@+id/solpen_btn_acept"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/solpen_btn_reject"
        android:background="@android:color/holo_green_light"
        android:text="@string/accept"
        android:textColor="@android:color/background_light"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/solpen_text"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/solpen_btn_acept" />
</RelativeLayout>
