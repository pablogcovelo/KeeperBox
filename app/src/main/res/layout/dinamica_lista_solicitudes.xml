<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rel_lista_solicitudes"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="end"
    android:clickable="true">

    <TextView
        android:id="@+id/lista_solicitudes_textView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/lista_solicitudes_imageView"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="2dp"
        android:ellipsize="none"
        android:gravity="center"
        android:textSize="18dp"
        android:layout_toStartOf="@+id/lista_solicitudes_imageView" />

    <ImageView
        android:id="@+id/lista_solicitudes_imageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="2dp" />
</RelativeLayout>